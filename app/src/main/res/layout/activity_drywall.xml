<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/header_one"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="ПРИЛОЖЕНИЕ\nСТРОИТЕЛЬНЫЙ КАЛЬКУЛЯТОР"
        android:textColor="#177C3A"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/header_two"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="top"
        android:text="Расчёт гипсокартона:"
        android:textColor="#4C9063"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_one" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_two">

        <EditText
            android:id="@+id/squareDrywall"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_marginTop="14dp"
            android:background="#B1D2DF"
            android:ems="10"
            android:gravity="top"
            android:hint="Площадь обшиваемой поверхности (метров квадратных)"
            android:inputType="textMultiLine"
            android:padding="14dp"
            android:textColor="#175F7C"
            android:textColorHint="#175F7C" />

        <EditText
            android:id="@+id/widthDrywall"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_marginTop="14dp"
            android:background="#B1DFC1"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Ширина листа (сантиметров)"
            android:inputType="textMultiLine"
            android:padding="14dp"
            android:textColor="#177C3A"
            android:textColorHint="#177C3A" />

        <EditText
            android:id="@+id/heightDrywall"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_marginTop="14dp"
            android:background="#B1DFC1"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Длина листа (сантиметров)"
            android:inputType="textMultiLine"
            android:padding="14dp"
            android:textColor="#177C3A"
            android:textColorHint="#177C3A" />

        <EditText
            android:id="@+id/costDrywall"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_marginTop="14dp"
            android:background="#B1DFC1"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Стоимость листа (монет)"
            android:inputType="textMultiLine"
            android:padding="14dp"
            android:textColor="#177C3A"
            android:textColorHint="#177C3A" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonNextActivity"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="#8A5E5E"
        android:text="Расчет"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>